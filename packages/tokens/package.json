{
  "name": "@enterprise/tokens",
  "version": "1.0.0",
  "description": "Shared Tailwind CSS token system for builder and client",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./architecture": {
      "types": "./dist/architecture/index.d.ts",
      "import": "./dist/architecture/index.mjs",
      "require": "./dist/architecture/index.js"
    },
    "./primitives": {
      "types": "./dist/primitives/index.d.ts",
      "import": "./dist/primitives/index.mjs",
      "require": "./dist/primitives/index.js"
    },
    "./semantic": {
      "types": "./dist/semantic/index.d.ts",
      "import": "./dist/semantic/index.mjs",
      "require": "./dist/semantic/index.js"
    },
    "./components": {
      "types": "./dist/components/index.d.ts",
      "import": "./dist/components/index.mjs",
      "require": "./dist/components/index.js"
    },
    "./ui": {
      "types": "./dist/ui/index.d.ts",
      "import": "./dist/ui/index.mjs",
      "require": "./dist/ui/index.js"
    },
    "./design-system": {
      "types": "./dist/design-system/index.d.ts",
      "import": "./dist/design-system/index.mjs",
      "require": "./dist/design-system/index.js"
    },
    "./fonts": {
      "types": "./dist/fonts/index.d.ts",
      "import": "./dist/fonts/index.mjs",
      "require": "./dist/fonts/index.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "clsx": "^2.1.0",
    "tailwind-merge": "^2.2.0"
  },
  "devDependencies": {
    "tsup": "^8.0.0",
    "typescript": "^5.0.0"
  },
  "peerDependencies": {
    "typescript": ">=4.7.0"
  }
}
